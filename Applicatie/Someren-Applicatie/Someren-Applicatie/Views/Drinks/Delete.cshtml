@model Someren_Applicatie.Models.Drink
@{
    ViewData["Title"] = "Delete Drink";
}

<h4>Nieuw drankje</h4>
@{
    if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">@ViewBag.ErrorMessage</div>
    }
}
<form action="/Drinks/Delete" method="post">

    <input hidden type="number" name="DrankId" value="@Model?.DrankId" />

    <div class="form-group py-2">
        <label asp-for="DrankNaam">Naam drankje:</label>
        <input asp-for="DrankNaam" class="form-control" required readonly value="@Model?.DrankNaam" />
    </div>
    <div class="form-group py-2">
        <label asp-for="Aantal">Aantal drankjes in de voorraad:</label>
        <input asp-for="Aantal" class="form-control" required readonly value="@Model?.Aantal" />
    </div>
    <div class="form-group py-2">
        <label asp-for="IsAlcoholisch">Alcoholisch of non-alcoholisch:</label>
        <select id="IsAlcoholisch" name="IsAlcoholisch" class="form-control">
            <option value="Alcoholisch">Alcoholisch</option>
            <option value="Non-Alcoholisch">Non-alcoholisch</option>
        </select>
    </div>
    <button type="submit" class="btn btn-danger btn-hover m-1">Verwijderen</button>
</form>
<a href="/Drinks/Index" class="btn btn-dark btn-hover m-1">Ga terug naar de lijst met drankjes</a>
