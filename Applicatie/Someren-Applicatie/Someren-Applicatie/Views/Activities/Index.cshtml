@{
}
@model List<Someren_Applicatie.Models.Activity>

@{
    ViewData["Title"] = "Activities";
}

<div class="text-center">
    <h1 class="display-4">Activities</h1>
    <p>All Activities are displayed here.</p>

</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Activiteitid</th>
            <th>Naam</th>
            <th>Datum</th>
           
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var activity in Model)
            {
                <tr>
                    <td>@activity.Activiteitid</td>
                    <td>@activity.Naam</td>
                    <td>@activity.Datum</td>
                    
                </tr>
            }
        }
    </tbody>
</table>
