@{
}
@model List<Someren_Applicatie.Models.Activiteit>

@{
    ViewData["Title"] = "Activities";
}

<div class="text-center">
    <h1 class="display-4">Activiteiten</h1>
    <p>All Activiteiten worden hier getoont: </p>
    <a href="/Activities/Create">Activiteit aanmaken</a>
</div>


@*Search form*@
<form method="get" action="/Activities/Index">
    <div class="form-group">
        <label for="search">Filter op name:</label>
        <input type="text" id="search" name="searchString" class="form-control" placeholder="Vul in activiteit naam">
    </div>


    <button type="submit" class="btn btn-primary">Zoek</button>
</form>



<table class="table table-striped">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Starttijd</th>
            <th>Eindtijd</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Activiteit activiteit in Model)
            {
                <tr>
                    <td>@activiteit.Naam</td>
                    <td>@activiteit.StartTijd</td>
                    <td>@activiteit.EindTijd</td>
                    <td>
                        <a href="/Activities/Edit/@activiteit.ActiviteitId" class="btn btn-dark">Edit</a>
                        <a href="/Activities/Delete/@activiteit.ActiviteitId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
