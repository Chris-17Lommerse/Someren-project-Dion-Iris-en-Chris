@model Someren_Applicatie.Models.Activiteit
@{
    ViewData["Title"] = "Delete Activity";
}

<h4> Verwijder activiteit</h4>
<form action="/Activities/Delete" method="post">
    <input hidden type="text" name="Activiteitid" value="@Model?.Activiteitid" />

    <div class="form-group py-2">
        <label for="Naam">Naam activiteit:</label>
        <input type="text" id="Naam" name="Naam" class="form-control" required value="@Model?.Naam" />
    </div>
    <div class="form-group py-2">
        <label for="Datum">Datum en tijd:</label>
        <input type="datetime" id="Datum" name="Datum" class="form-control" required value="@Model?.Datum" />
    </div>

    <button type="submit" class="btn btn-danger">Verwijder</button>
</form>

<a href="/Activities/Index">Ga terug naar de lijst van activiteiten</a>
