@model Someren_Applicatie.Models.Student
@{
    ViewData["Title"] = "Student aanmaken";
}
<h1>Nieuwe student</h1>
@{
    if(ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">@ViewBag.ErrorMessage</div>
    }
}

<form action="/Students/Create" method="POST">
    <div class="input-group">
        <span class="input-group-text">Voor en Achternaam</span>
        <input type="text" id="Voornaam" name="Voornaam" aria-label="Voornaam" class="form-control" required value="@Model?.Voornaam" />
        <input type="text" id="Achternaam" name="Achternaam" aria-label="Achternaam" class="form-control" required value="@Model?.Achternaam" />
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Telefoon nummer</span>
        <input type="tel" id="TelefoonNr" name="TelefoonNr" class="form-control" aria-label="Telefoon nummer" required value="@Model?.TelefoonNr" />
    </div>

    <div class="form-group py-2">
        <label for="Klas">Klas</label>
        <input type="text" id="Klas" name="Klas" class="form-control" required value="@Model?.Klas" />
    </div>

    <div class="form-group py-2">
        <label for="Kamernr">Kamer nummer</label>
        <input type="text" id="Kamernr" name="Kamernr" class="form-control" required value="@Model?.KamerNr" />
    </div>

    <button type="submit" class="btn btn-primary">Aanmaken</button>
</form>

<a href="/Students/Index">Terug naar lijst</a>
