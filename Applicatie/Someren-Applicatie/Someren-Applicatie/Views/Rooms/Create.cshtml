@model Someren_Applicatie.Models.Room
@{
    ViewData["Title"] = "Create Room";
}

<h4>Nieuwe Slaapkamer</h4>
@using (Html.BeginForm())
{
    <form action="/Rooms/Create" method="post">
        <div class="form-group py-2">
            <label for="kamerNummer">Kamernummer:</label>
            <input type="text" id="KamerNummer" name="KamerNummer" class="form-control" required value="@Model?.KamerNummer" />
        </div>
        <div class="form-group py-2">
            <label for="Aantal_Slaapplekken">Aantal slaaplekken:</label>
            <input type="number" id="Aantal_Slaapplekken" name="Aantal_Slaaplekken" class="form-control" required value="@Model?.AantalSlaaplekken" />
        </div>
        <div class="form-group py-2">
            <label for="TypeKamer">Type kamer:</label>
            <select>
                <option>Student</option>
                <option>Lecture</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </form>
}
<a href="/Rooms/Index">Ga terug naar lijst met slaapkamers</a>

