@model Someren_Applicatie.Models.Room
@{
    ViewData["Title"] = "Create Room";
}

<h4>Nieuwe Slaapkamer</h4>
    <form action="/Rooms/Create" method="post" >
        <div class="form-group py-2">
            <label asp-for="KamerNummer">Kamernummer:</label>
            <input asp-for="KamerNummer" class="form-control" required value="@Model?.KamerNummer" />
        </div>
        <div class="form-group py-2">
            <label asp-for="AantalSlaaplekken">Aantal slaaplekken:</label>
            <input asp-for="AantalSlaaplekken" class="form-control" required value="@Model?.AantalSlaaplekken" />
        </div>
        <div class="form-group py-2">
            <label for="TypeKamer">Type kamer:</label>
            <select id="TypeKamer" name="TypeKamer" class="form-control">
                <option value="Student">Student</option>
                <option value="Lecturer">Lecturer</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success btn-hover m-1">Voeg toe</button>
    </form>
<a href="/Rooms/Index" class="btn btn-dark btn-hover m-1">Ga terug naar de lijst met slaapkamers</a>

