    @model Someren_Applicatie.Models.Room
@{
    ViewData["Title"] = "Create Room";
}

<h4>New Room</h4>
<form action="/Rooms/Create" method="post">
    <div class="form-group py-2">
        <label for="">Name:</label>
        <input type="text" id="UserName" name="UserName" class="form-control" required value="@Model?.UserName" />
    </div>
    <div class="form-group py-2">
        <label for="MobileNumber">Mobile Number:</label>
        <input type="text" id="MobileNumber" name="MobileNumber" class="form-control" required value="@Model?.MobileNumber" />
    </div>
    <div class="form-group py-2">
        <label for="EmailAddress">Email Adress:</label>
        <input type="text" id="EmailAdress" name="EmailAddress" class="form-control" required value="@Model?.EmailAddress" />
    </div>
    <div class="form-group py-2">
        <label for="Password">Password:</label>
        <input type="password" id="Password" name="Password" class="form-control" required value="@Model?.Password" />
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    </form>

    <a href="/Users/Index">Back to List</a>
}
