@model List<Someren_Applicatie.Models.Room>
@{
    ViewData["Title"] = "Rooms";
 }

    <div class="text-center">
        <h1 class="display-4">Rooms</h1>
        <a href="/Rooms/Create">Create new</a>
        <p>Aantal kamers: @Model.Count</p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kamernummer</th>
                    <th>Aantal slaapplekken</th>
                    <th>Type kamer</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (Room room in Model)
                    {
                        <tr>
                            <td>@room.KamerNummer</td>
                            <td>@room.Aantal_Slaaplekken</td>
                            <td>@room.TypeKamer</td>
                            <td>
                                <a href="/Rooms/Edit/@room.KamerNummer">Edit</a>
                                <a href="/Rooms/Delete/@room.KamerNummer">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>



