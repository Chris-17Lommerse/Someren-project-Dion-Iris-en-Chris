@model Someren_Applicatie.Models.Lecturer
@{
    ViewData["Title"] = "Edit Lecturer";
}

<h1>Edit Docent</h1>
<form action="/Lecturers/Edit" method="POST">
    @*Voornaam*@
    <div class="form-group py-2">
        <label for="Voornaam">Voornaam</label>
        <input type="text" id="Voornaam" name="Voornaam" aria-label="Voornaam" class="form-control" required value="@Model?.Voornaam" />
    </div>
    @*Achternaam*@
    <div class="form-group py-2">
        <label for="Achternaam">Achternaam</label>
        <input type="text" id="Achternaam" name="Achternaam" aria-label="Achternaam" class="form-control" required value="@Model?.Achternaam" />
    </div>
    @*Telefoonnummer*@
    <div class="form-group py-2">
        <label for="TelefoonNr">Telefoon nummer</label>
        <input type="tel" id="TelefoonNr" name="TelefoonNr" class="form-control" required value="@Model?.TelefoonNr" />
    </div>
    @*Leeftijd*@
    <div class="form-group py-2">
        <label for="Leeftijd">Leeftijd</label>
        <input type="number" id="Leeftijd" name="Leeftijd" class="form-control" required value="@Model?.Leeftijd" />
    </div>
    @*Kamernummer*@
    <div class="form-group py-2">
        <label for="Kamernr">Kamernummer</label>
        <input type="text" id="Kamernr" name="Kamernr" class="form-control" required value="@Model?.KamerNr" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

<a href="/Lecturers/Index">Back to List</a>