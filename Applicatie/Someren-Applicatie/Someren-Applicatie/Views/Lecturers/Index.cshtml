@{
}
@model List<Someren_Applicatie.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturers";
}

<div class="text-center">
    <h1 class="display-4">Lecturers</h1>
    <p>All Lecturers are displayed here.</p>

</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Docentnr</th>
            <th>Voornaam</th>
            <th>Achternaam</th>
            <th>Telefoonnummer</th>
            <th>Leeftijd</th>
            <th>Kamernr</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var lecturer in Model)
            {
                <tr>
                    <td>@lecturer.Docentnr</td>
                    <td>@lecturer.Voornaam</td>
                    <td>@lecturer.Achternaam</td>
                    <td>@lecturer.Telefoonnummer</td>
                    <td>@lecturer.Leeftijd</td>
                    <td>@lecturer.Kamernr</td>
                </tr>
            }
        }
    </tbody>
</table>
